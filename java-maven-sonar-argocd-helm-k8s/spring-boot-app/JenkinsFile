pipeline {
  agent {
    docker {
      image 'gayathrimurugaian/maven-docker-agent:v8'
      args '--entrypoint="" -u root -v /var/run/docker.sock:/var/run/docker.sock --privileged'
    }
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'master', url: "https://github.com/mgayathri181/cicd_argocd.git"
      }
    }
    stage('List files') {
      steps {
        sh 'ls -la'
        sh 'ls -la java-maven-sonar-argocd-helm-k8s/spring-boot-app'
      }
    }
  }
}
