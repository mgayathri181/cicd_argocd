pipeline {
  agent {
    docker {
      image 'gayathrimurugaian/maven-docker-agent:v6'
      args '-u root --privileged -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {
    stage('Test Shell') {
      steps {
        sh '''
          echo "âœ… Basic Shell Execution"
          whoami
          ps aux | head -n 5
        '''
      }
    }
  }
}
