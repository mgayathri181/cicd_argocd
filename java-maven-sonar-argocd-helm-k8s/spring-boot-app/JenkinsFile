pipeline {
  agent {
    docker {
      image 'gayathrimurugaian/maven-docker-agent:v5'
      args '-u root --privileged -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {
    stage('Basic Shell Check') {
      steps {
        sh '''
          echo "âœ… Shell works"
          which bash
          which ps
          ps aux | head -n 5
        '''
      }
    }
  }
}
